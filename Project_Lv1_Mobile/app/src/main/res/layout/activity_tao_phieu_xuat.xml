<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/cuon2"
    android:padding="15dp"
    tools:context=".TaoPhieuXuatActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phiếu Xuất"
        android:fontFamily="@font/indam"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Mã số:"
                android:textColor="@color/black"
                android:fontFamily="@font/indam"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/txtMaSoPhieuXuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/indam"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Người tạo:"
                android:textColor="@color/black"
                android:fontFamily="@font/indam"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/txtNguoiTaoPhieuXuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/indam"
                android:textSize="21sp"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Ngày tạo:"
                android:textColor="@color/black"
                android:fontFamily="@font/indam"
                android:textSize="21sp"  />

            <TextView
                android:id="@+id/txtNgayXuatPhieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/indam"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Tổng sản phẩm:"
                android:textColor="@color/black"
                android:fontFamily="@font/indam"
                android:textSize="21sp"  />

            <TextView
                android:id="@+id/txtTongSoSPXuatSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/indam"
                android:textSize="21sp"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Tổng tiền chưa thuế:"
                android:textColor="@color/black"
                android:fontFamily="@font/indam"
                android:textSize="21sp"  />

            <TextView
                android:id="@+id/txtTongTienXuatTruoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/indam"
                android:textSize="21sp"  />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Thuế: 10%"
            android:textColor="@color/black"
            android:fontFamily="@font/indam"
            android:textSize="21sp"  />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Tổng tiền sau thuế:"
                android:textColor="@color/black"
                android:fontFamily="@font/indam"
                android:textSize="21sp"  />

            <TextView
                android:id="@+id/txtTongTienXuatSau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/indam"
                android:textSize="21sp" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ProgressBar
            android:id="@+id/progressBarPhieuXuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnTaoPhieuXuat"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:paddingHorizontal="10dp"
            android:text="Xác Nhận"
            android:fontFamily="@font/indam"
            android:textSize="21sp"
            android:textColor="@color/black"
             />

    </FrameLayout>

    <Button
        android:id="@+id/btnHuyTaoPhieuXuat"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:text="Hủy"
        android:textColor="@color/black"
        android:fontFamily="@font/indam"
        android:textSize="21sp"  />

</LinearLayout>