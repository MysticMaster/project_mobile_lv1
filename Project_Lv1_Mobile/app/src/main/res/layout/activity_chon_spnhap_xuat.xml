<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DC0C0C0"
    android:orientation="vertical"
    tools:context=".ChonSPNhapXuatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#448AFF"
        android:paddingHorizontal="5dp">

        <ImageButton
            android:id="@+id/iBtnThoatChonSP"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="#448AFF"
            android:scaleType="fitXY"
            android:src="@drawable/toolbar_back_icon" />

        <FrameLayout
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/txtTimKiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:text="Tìm Kiếm"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <SearchView
                android:id="@+id/seachView"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:background="@color/white"
                android:padding="2dp"
                android:visibility="invisible" />

        </FrameLayout>


        <ImageButton
            android:id="@+id/iBtnLoc"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="#448AFF"
            android:scaleType="fitXY"
            android:src="@drawable/filter" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDanhSachSP"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>