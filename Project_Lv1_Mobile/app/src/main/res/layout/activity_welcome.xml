<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#26C0C0C0"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/llWelcomeActivity"
    tools:context=".WelcomeActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/fpt_logo"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/bn_wellcome1"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#1FBCB7"
            android:layout_margin="10dp"
            android:padding="5dp">
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="1000dp"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_len_don_hang"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="Tạo phiếu xuất kho trực tiếp trên ap"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/baseline_star_rate_24" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/baseline_star_rate_24" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/baseline_star_rate_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/baseline_star_rate_24" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/baseline_star_rate_24" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#1FBCB7"
        android:layout_gravity="center"
        android:padding="5dp">
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="1000dp"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_may_in"
                android:layout_margin="5dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Trực tiếp in phiếu xuất kho hàng loạt trên ap"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#1FBCB7"
        android:layout_margin="15dp"
        android:layout_gravity="end"
        android:padding="5dp">
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="1000dp"
            android:layout_margin="8dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_danh_dau_ds"
                android:layout_margin="5dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:text="Đánh dấu thông tin thủ kho theo trạng thái"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
