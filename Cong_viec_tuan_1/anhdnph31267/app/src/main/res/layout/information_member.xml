<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#4DC0C0C0"
    android:paddingHorizontal="15dp"
    android:paddingVertical="10dp">

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/custom_image_view"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/member_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtIMUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PH31267"
        android:textAllCaps="true"
        android:textColor="#CC000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtIMUFullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Đinh Ngọc Anh"
        android:textColor="#E6000000"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/txtIMUEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="anhdnph31267@fpt.edu.vn"
        android:textColor="#99000000"
        android:textSize="18sp"
        android:textStyle="italic" />


</LinearLayout>